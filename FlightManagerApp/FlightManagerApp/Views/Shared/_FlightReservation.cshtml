    @model FlightManagerApp.Models.Reservation

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
        <form asp-action="PartialCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-container" style="display:flex;">
                <div class="left">
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" maxlength="50" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MiddleName" class="control-label"></label>
                        <input asp-for="MiddleName" class="form-control" maxlength="50" required />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" maxlength="50" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="middle">
                    <div class="form-group">
                        <label asp-for="Egn" class="control-label"></label>
                        <input asp-for="Egn" class="form-control" pattern="\d{10}" required />
                        <span asp-validation-for="Egn" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" type="email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" maxlength="13" required />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="right">
                    <div class="form-group">
                        <label asp-for="Nationality" class="control-label"></label>
                        <input asp-for="Nationality" class="form-control" pattern="[A-Z]{2}" placeholder="XX" maxlength="2" required />
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TicketType" class="control-label"></label>
                        <select asp-for="TicketType" class="form-control" required>
                            <option value="">Choose a ticket type</option>
                            <option value="Business">Business</option>
                            <option value="Economics">Economics</option>
                        </select>
                        <span asp-validation-for="TicketType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FlightId" class="control-label"></label>
                        <select asp-for="FlightId" class="form-control" asp-items="ViewBag.FlightId" required></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
            <input type="submit" value="Book" class="btn btn-primary" onclick="onSubmit()" />
            </div>
    </form>
</body>
</html>

