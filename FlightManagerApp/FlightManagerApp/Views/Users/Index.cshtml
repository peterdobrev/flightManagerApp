@model IEnumerable<FlightManagerApp.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="pages">
    <div>
        <label for="pageSize">Show</label>
        <select id="pageSize">
            <option value="25" selected>25</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
        <label for="pageSize">results per page</label>
    </div>
    <div>
        <button id="prev-page">&lt;</button>
        <button id="next-page">&gt;</button>
    </div>
</div>

<div id="table-wrapper">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Egn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Egn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div class="pages">
    <div>
        <button id="prev-page">&lt;</button>
        <button id="next-page">&gt;</button>
    </div>
</div>

<script>
    var currentPage = 1;
    var pageSize = 25;

    function showPage(page) {
        currentPage = page;

        var start = (currentPage - 1) * pageSize;
        var end = start + pageSize;
        var rows = document.querySelectorAll("#table-wrapper tbody tr");

        rows.forEach(function (row, index) {
            if (index >= start && index < end) {
                row.style.display = "table-row";
            } else {
                row.style.display = "none";
            }
        });
    }

    document.addEventListener("DOMContentLoaded", function () {
        // Set the initial page
        showPage(1);

        // Handle the page size dropdown
        document.getElementById("pageSize").addEventListener("change", function () {
            pageSize = parseInt(this.value);
            showPage(1);
        });

        // Handle the pagination arrows
        document.getElementById("prev-page").addEventListener("click", function () {
            if (currentPage > 1) {
                showPage(currentPage - 1);
            }
        });

        document.getElementById("next-page").addEventListener("click", function () {
            var numRows = document.querySelectorAll("#table-wrapper tbody tr").length;
            var numPages = Math.ceil(numRows / pageSize);

            if (currentPage < numPages) {
                showPage(currentPage + 1);
            }
        });
    });
</script>