@model IEnumerable<FlightManagerApp.Models.Flight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="pages">
 <div>
<label for="pageSize">Show</label>
<select id="pageSize">
    <option value="25" selected>25</option>
    <option value="50">50</option>
    <option value="100">100</option>
</select>
<label for="pageSize">results per page</label>
    </div>
<div>
    <button id="prev-page">&lt;</button>
    <button id="next-page">&gt;</button>
</div>
</div>

<div id="table-wrapper">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartureLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaneType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PilotName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassengerCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessClassCapacity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaneType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PilotName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessClassCapacity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FlightId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FlightId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FlightId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div class="pages">
    <div>
        <button id="prev-page">&lt;</button>
        <button id="next-page">&gt;</button>
    </div>
</div>

<script>
    var currentPage = 1;
    var pageSize = 25;

    function showPage(page) {
        currentPage = page;

        var start = (currentPage - 1) * pageSize;
        var end = start + pageSize;
        var rows = document.querySelectorAll("#table-wrapper tbody tr");

        rows.forEach(function (row, index) {
            if (index >= start && index < end) {
                row.style.display = "table-row";
            } else {
                row.style.display = "none";
            }
        });
    }

    document.addEventListener("DOMContentLoaded", function () {
        // Set the initial page
        showPage(1);

        // Handle the page size dropdown
        document.getElementById("pageSize").addEventListener("change", function () {
            pageSize = parseInt(this.value);
            showPage(1);
        });

        // Handle the pagination arrows
        document.getElementById("prev-page").addEventListener("click", function () {
            if (currentPage > 1) {
                showPage(currentPage - 1);
            }
        });

        document.getElementById("next-page").addEventListener("click", function () {
            var numRows = document.querySelectorAll("#table-wrapper tbody tr").length;
            var numPages = Math.ceil(numRows / pageSize);

            if (currentPage < numPages) {
                showPage(currentPage + 1);
            }
        });
    });
</script>